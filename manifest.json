{
    "name": "Kippt",
    "version": "1.0.12",

    "description": "Kippt.com's Chrome extension",
    "homepage_url": "https://kippt.com",
    "icons": { 
        "16": "img/icon16.png",
        "48": "img/icon48.png",
        "128": "img/icon128.png"
    },
    "permissions": [
      "tabs",
      "contextMenus",
      "https://kippt.com/"
    ],
    "options_page": "options.html",
    
    "omnibox": { "keyword" : "k" },
    "background": {
        "scripts": ["zepto.min.js", "json2.js", "kippt_omnibox.js", "kippt_context_menu.js", "tabs.js"]
    },
    "browser_action": {
        "default_icon": "img/icon19.png",
        "default_title": "Kippt this page",
        "popup": "extension.html"
    },
    "content_scripts": [{
        "js": ["kippt_content.js"],
        "matches": ["http://*/*", "https://*/*"]
    },
    {
        "all_frames": true,
        "js": ["kippt_iframe.js"],
        "matches": ["https://kippt.com/extensions*"]
    }]
}